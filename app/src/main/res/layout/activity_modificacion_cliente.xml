<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#1B2B5B"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="30dp"
            android:paddingTop="20dp"
            android:layout_marginBottom="20dp">

            <!-- Texto del Header -->
            <TextView
                android:id="@+id/headerTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Modificación de datos"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:layout_marginLeft="15dp"
                android:textStyle="bold"
                android:fontFamily="@font/montserrat_semibold"/>


            <ImageButton
                android:id="@+id/homeButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="30dp"
                android:scaleType="fitCenter"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Ir a inicio"
                android:src="@drawable/home_icon"

                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="2dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">
            <AutoCompleteTextView
                android:id="@+id/autoCompleteClientes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Buscar cliente por nombre o documento"
                android:fontFamily="@font/montserrat_semibold"
                android:background="#4DA3B4D3"
                android:padding="1dp"
                android:layout_marginBottom="20dp"/>

            <EditText
                android:id="@+id/etFirstName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nombre"
                android:fontFamily="@font/montserrat_semibold"
                android:inputType="textPersonName"
                android:background="#4DA3B4D3"
                android:padding="10dp"
                android:layout_marginBottom="20dp"

                />

            <EditText
                android:id="@+id/etLastName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="#4DA3B4D3"
                android:fontFamily="@font/montserrat_semibold"
                android:hint="Apellido"
                android:inputType="textPersonName"
                android:padding="10dp" />
            <Spinner
                android:id="@+id/spinnerDocumentType"
                android:layout_width="374dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@drawable/custom_spinner_background"
                android:fontFamily="@font/montserrat_semibold"
                android:padding="10dp"
                android:popupBackground="#FFFFFF"
                android:spinnerMode="dropdown" />
            <EditText
                android:id="@+id/etDocumentNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Número de Documento"
                android:fontFamily="@font/montserrat_semibold"
                android:inputType="number"
                android:background="#4DA3B4D3"
                android:padding="10dp"
                android:layout_marginBottom="15dp"/>

            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:background="#4DA3B4D3"
                android:fontFamily="@font/montserrat_semibold"
                android:padding="10dp"
                android:layout_marginBottom="15dp"/>

            <EditText
                android:id="@+id/etPhoneNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Celular"
                android:fontFamily="@font/montserrat_semibold"
                android:inputType="phone"
                android:background="#4DA3B4D3"
                android:padding="10dp"
                android:layout_marginBottom="15dp"/>
            <EditText
                android:id="@+id/etUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Usuario"
                android:fontFamily="@font/montserrat_semibold"
                android:inputType="textPersonName"
                android:background="#4DA3B4D3"
                android:padding="10dp"
                android:layout_marginBottom="20dp"
                />

            <EditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Contraseña"
                android:fontFamily="@font/montserrat_semibold"
                android:inputType="textPassword"
                android:background="#4DA3B4D3"
                android:padding="10dp"
                android:layout_marginBottom="20dp"
                />

            <CheckBox
                android:id="@+id/cbInscribirSocio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_semibold"
                android:layout_gravity="center"
                android:padding="10dp"
                android:text="Inscribir socio"
                android:textColor="#000000"
                android:textSize="16sp"
                android:buttonTint="@color/checkbox_color"/>



            <CheckBox
                android:id="@+id/cbPresentoFichaMedica"
                android:layout_width="173dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/montserrat_semibold"
                android:gravity="center"
                android:padding="10dp"
                android:text="Presentó ficha médica"
                android:textColor="#000000"
                android:textSize="16sp"
                android:buttonTint="@color/checkbox_color"/>


            <Button
                android:id="@+id/btnModification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#1B2B5B"
                android:padding="20dp"
                android:layout_marginTop="10dp"
                android:text="MODIFICAR"
                android:fontFamily="@font/montserrat_semibold"
                android:textSize="18dp"
                app:cornerRadius="6dp"

                />
        </LinearLayout>
    </LinearLayout>


</ScrollView>



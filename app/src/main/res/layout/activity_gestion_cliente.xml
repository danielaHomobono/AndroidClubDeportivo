<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#1B2B5B"
            android:padding="16dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Gestión Clientes"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:fontFamily="@font/montserrat_semibold"/>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/home_icon"
                app:tint="@android:color/white"/>

        </LinearLayout>

        <!-- Home Image -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/home_img"/>

        <!-- Buttons Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_marginTop="20dp">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Inscripción"
                android:backgroundTint="#A3B4D3"
                android:textColor="@android:color/white"
                android:padding="40dp"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/montserrat_semibold"
                app:cornerRadius="25dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Modificación de datos"
                android:backgroundTint="#A3B4D3"
                android:textColor="@android:color/white"
                android:padding="40dp"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/montserrat_semibold"
                app:cornerRadius="25dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Impresión carnet"
                android:backgroundTint="#A3B4D3"
                android:textColor="@android:color/white"
                android:padding="40dp"
                android:fontFamily="@font/montserrat_semibold"
                app:cornerRadius="25dp"/>

        </LinearLayout>

        <!-- Footer -->
        <LinearLayout
            android:id="@+id/footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#1B2B5B"
            android:orientation="horizontal"
            android:padding="15dp"
            android:gravity="center">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/sede"
                    app:tint="@android:color/white"/>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/sede"
                    app:tint="@android:color/white"
                    android:layout_marginTop="16dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="start"
                android:layout_marginStart="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sucursal Cerro"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:fontFamily="@font/montserrat_semibold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sucursal Córdoba"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:fontFamily="@font/montserrat_semibold"
                    android:layout_marginTop="24dp"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
